# Definir un diccionario de palabras clave positivas y negativas
palabras_positivas = ["feliz", "genial", "increíble", "bueno"]
palabras_negativas = ["triste", "malo", "horrible", "terrible"]

# Texto para el análisis de sentimiento
texto = "Python es un lenguaje de programación increíblemente poderoso y versátil."

# Tokenizar el texto en palabras
palabras = texto.lower().split()

# Inicializar puntajes de sentimiento
puntaje_positivo = 0
puntaje_negativo = 0

# Calcular puntajes de sentimiento
for palabra in palabras:
    if palabra in palabras_positivas:
        puntaje_positivo += 1
    elif palabra in palabras_negativas:
        puntaje_negativo += 1

# Determinar el sentimiento basado en los puntajes
if puntaje_positivo > puntaje_negativo:
    sentimiento = "positivo"
elif puntaje_positivo < puntaje_negativo:
    sentimiento = "negativo"
else:
    sentimiento = "neutral"

# Mostrar los resultados
print(f"Texto: {texto}")
print(f"Sentimiento: {sentimiento}")
